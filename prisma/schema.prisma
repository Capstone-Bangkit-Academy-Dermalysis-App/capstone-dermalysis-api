generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id
  identifier String       @unique
  name       String
  prediction Prediction[]
}

model Disease {
  id          Int          @id
  image       String?
  description String?      @db.LongText
  cause       Json?
  symptom     Json?
  treatment   Json?
  label       String
  latinName   String?
  name        String
  prediction  Prediction[]
}

model Prediction {
  id              String  @id @default(cuid())
  image           String? @db.LongText
  userId          String?
  diseaseId       Int
  confidenceScore Float
  Disease         Disease @relation(fields: [diseaseId], references: [id])
  User            User?   @relation(fields: [userId], references: [id])

  @@index([diseaseId], map: "Prediction_diseaseId_fkey")
  @@index([userId], map: "Prediction_userId_fkey")
}
